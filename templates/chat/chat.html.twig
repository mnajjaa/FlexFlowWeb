<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sports Chatbot</title>
    <style>
        body {
            font-family: 'Arial', sans-serif; /* Modern font */
            background-color: #f4f4f4; /* Light grey background */
            margin: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }
        #chat-container {
            width: 350px; /* Slightly wider chat box */
            height: 500px; /* Taller chat box */
            border-radius: 8px; /* Rounded corners */
            box-shadow: 0 4px 8px rgba(0,0,0,0.1); /* Subtle shadow */
            display: flex;
            flex-direction: column;
            background: white; /* White background for the chat box */
            overflow: hidden; /* Hide overflow */
        }
        #chat-box {
            flex-grow: 1;
            padding: 20px; /* More padding for aesthetics */
            overflow-y: auto; /* Allow scrolling */
            background: #fff; /* Ensure the background is white */
        }
        .user-message, .bot-message {
            border-radius: 20px; /* Rounded message bubbles */
            padding: 10px 20px; /* Padding inside message bubbles */
            margin-bottom: 10px; /* Space between messages */
            max-width: 80%; /* Maximum width of message bubbles */
        }
        .user-message {
            background-color: #007BFF; /* Blue background for user message */
            color: white; /* White text for readability */
            text-align: left;
            margin-left: auto; /* Align user messages to the right */
        }
        .bot-message {
            background-color: #e9e9eb; /* Light grey background for bot messages */
            text-align: left;
            color: black; /* Black text for readability */
        }
        textarea {
            padding: 10px; /* Padding for the text area */
            border: none; /* Remove border */
            border-top: 1px solid #ccc; /* Light grey border on the top only */
            width: calc(100% - 20px); /* Full-width but accounting for padding */
            resize: none; /* Disable resizing */
        }
        button {
            background-color: #007BFF; /* Matching blue background for button */
            color: white; /* White text */
            border: none; /* No border */
            padding: 10px 20px;
            width: 100%; /* Full-width button */
            text-transform: uppercase; /* UPPERCASE text */
            font-weight: bold; /* Bold font */
            cursor: pointer; /* Pointer cursor on hover */
            transition: background-color 0.3s; /* Smooth transition for hover effect */
        }
        button:hover {
            background-color: #0056b3; /* Darker blue on hover */
        }
    </style>
</head>
<body>
    <div id="chat-container">
        <div id="chat-box"></div>
        <textarea id="user-input" placeholder="Type your message here..."></textarea>
        <button onclick="sendMessage()">Send</button>
    </div>

    <script>
        function sendMessage() {
            var userInput = document.getElementById('user-input').value.trim();
            if (userInput === '') return; // Prevent sending empty messages
            var chatBox = document.getElementById('chat-box');
            chatBox.innerHTML += '<div class="user-message">' + userInput + '</div>';

            fetch('/api/chat', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ message: userInput })
            })
            .then(response => response.json())
            .then(data => {
                chatBox.innerHTML += '<div class="bot-message">' + data.reply + '</div>';
                chatBox.scrollTop = chatBox.scrollHeight; // Keep scroll at the bottom
            })
            .catch((error) => {
                console.error('Error:', error);
                chatBox.innerHTML += '<div class="bot-message">Error: ' + error.toString() + '</div>';
            });

            document.getElementById('user-input').value = ''; // Clear input after sending
        }
    </script>
</body>
</html>
