{% extends 'base.html.twig' %}

{% block title %}Coaching Offers{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        body {
            font-family: 'Arial', sans-serif;
            background: #f0f0f0;
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
        }

        .container {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            grid-gap: 20px;
            width: 80%;
            margin: auto;
        }

        .card {
            background: white;
            border-radius: 10px; /* Slightly rounded corners for aesthetics */
            padding: 0; /* Padding removed here and handled within the content areas */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            overflow: hidden; /* Ensure the image corners are also rounded */
            transition: transform 0.3s ease-in-out;
        }

        .card:hover {
            transform: translateY(-10px);
        }

        .card-header {
            padding: 20px;
            text-align: center;
            font-weight: bold;
            font-size: 1.5rem;
        }

        .card-header-img {
            width: 100%;
            display: block; /* Makes sure the image is block level so it takes up the full width */
            height: 150px; /* Fixed height, or use 'auto' to maintain aspect ratio */
            object-fit: cover; /* Ensures the image covers the area nicely */
        }

        .card-content {
            padding: 20px;
            text-align: center; /* Center the text inside the content area */
        }

        .button {
            background-color: #6CCDD9;
            color: white;
            border: none;
            border-radius: 5px;
            padding: 10px 20px;
            text-align: center;
            text-decoration: none;
            display: inline-block;
            font-size: 16px;
            margin-top: 15px;
            cursor: pointer;
            transition: background-color 0.3s; /* Transition for the button background color */
        }

        .button:hover {
            background-color: #5ab6c9; /* A darker shade of the button color for hover state */
        }

         <style>
        #addButton {
            position: relative; /* ou 'absolute' si vous souhaitez le placer en dehors du flux normal */
            top: -50px; /* ajustez en fonction de la mise en page */
            left: 50%; /* pour centrer le bouton */
            transform: translateX(-50%); /* pour centrer parfaitement le bouton */
            z-index: 10; /* pour s'assurer qu'il est au-dessus des autres éléments */
        }

        /* Add styles for the animated button */
    @keyframes changeColor {
        0% { background-color: #49a9ee; }

        50% { background-color: #f9bf3b; }
        75% { background-color: #16a085; }
        100% { background-color: #49a9ee; }
    }

    .request-coaching-btn {
        display: block;
        width: 200px; /* Adjust the width as needed */
        padding: 10px;
        margin: 20px auto; /* This will center the button */
        background-color: #49a9ee;
        color: white;
        text-align: center;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        animation: changeColor 1s infinite; /* The animation */
    }

    </style>
    </style>
{% endblock %}

