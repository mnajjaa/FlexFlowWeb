{# Incluez jQuery #}
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

{# Incluez jQuery ThreeSixty #}
<script src="path/to/jquery.threesixty.min.js"></script>

{# Image à 360 degrés #}
<img id="image360" src="images.jpg" alt="Image 360">

<script>
    // Initialisez jQuery ThreeSixty sur l'image
    $('#image360').ThreeSixty({
        totalFrames: 60, // Nombre total de frames de l'image
        endFrame: 60, // Frame final de l'image
        currentFrame: 1, // Frame initial
        imgList: '.threesixty_images', // Classe parente des images
        progress: '.spinner', // Élément de chargement
        imagePath:'path/to/360-image/', // Chemin vers le dossier contenant les images
        filePrefix: '', // Préfixe du nom des fichiers
        ext: '.jpg', // Extension des fichiers
        height: 300, // Hauteur de l'image
        width: 600, // Largeur de l'image
        navigation: true, // Afficher les boutons de navigation
        responsive: true // Activer la fonctionnalité de réponse
    });
</script>
