        <link href="{{asset('back-office/css/app.min.css')}}" id="app-style" rel="stylesheet" type="text/css" />
        <script src="{{asset('validationJs/formValidation.js')}}"></script>
        
    </head>
<body>
    <div class="col-xl-6">
                                <div class="card">
                                    <div class="card-body">
        
                                        <h4 class="card-title">Ajouter un Coach </h4>
                                        <p class="card-title-desc">Ajouter un  Coach dans votre Equipe . </p>
        
                                        <form action="{{ path('coach_add') }}" method="POST" class="custom-validation" id="addCoachForm">
        
                                            <div class="mb-3">
                                                <label class="form-label">Nom Complet</label>
                                                <div>
                                                    <input type="text" id="name" name="name" class="form-control" required
                                                       oninput="isValidName()"      placeholder="Min 6 chars."/>
                                                            {# <span class="text-danger">{{ form_errors(form.name) }}</span> #}
                                                            <span id="error_name" class="text-danger" style="color: red;"></span>
                                                            <span id="success_name" class="text-success" style="color: green;"></span>

                                                </div>
                                            </div>
                                            <div class="mb-3">
                                                <label class="form-label">Telephone</label>
                                                <div>
                                                    <input type="text" id="telephone" name="telephone" class="form-control"  required
                                                    oninput="isValidPhoneNumber()" placeholder="Min 8 chars."/>
                                                 <span id="error_Telephone" class="text-danger" style="color: red;"></span>
                                                 <span id="success_Telephone" class="text-success" style="color: green;"></span>
                                                </div>
                                            </div>
                                            <div class="mb-3">
                                                <label class="form-label">Email</label>
                                                <div>
                                                    <input type="email" id="email" name="email" class="form-control" required   
                                                            placeholder="Text between 5 - 10 chars length" oninput="isValidEmail()"/>
                                                            <span id="error_email" class="text-danger" style="color: red;"></span>
                                                            <span id="success_email" class="text-success" style="color: green;"></span>

                                                </div>
                                            </div>
                                            <div>
                                                <div>
                                                    <button type="submit" class="btn btn-primary waves-effect waves-light me-1">
                                                        Submit
                                                    </button>
                                                    <button type="reset" class="btn btn-secondary waves-effect">
                                                        Cancel
                                                    </button>
                                                </div>
                                            </div>
                                        </form>
        
                                    </div>
                                </div>
    </div> <!-- end col -->

    
</body>
    {% endblock %}