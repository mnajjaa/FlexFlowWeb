        <link rel="shortcut icon" href="{{asset('back-office/images/favicon.ico')}}">

        <!-- Bootstrap Css -->
        <link href="{{asset('back-office/css/bootstrap.min.css')}}" id="bootstrap-style" rel="stylesheet" type="text/css" />
        <!-- Icons Css -->
        <link href="{{asset('back-office/css/icons.min.css')}}" rel="stylesheet" type="text/css" />
        <!-- App Css-->
        <link href="{{asset('back-office/css/app.min.css')}}" id="app-style" rel="stylesheet" type="text/css" />

    </head>
    

    <body>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <center><h1>Ajouter un produit</h1></center>
                    <form action="{{ path('produit_ajouter') }}" method="post" enctype="multipart/form-data">
                        {{ form_start(form, {'method': 'POST'}) }}
                        {{ form_row(form._token) }} {# Ajout du jeton CSRF #}
                        <div class="mb-3">
                            <label for="nom" class="form-label">Nom du produit</label>
                            {{ form_widget(form.nom, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="mb-3">
                            <label for="Description" class="form-label">Description</label>
                            {{ form_widget(form.Description, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="mb-3">
                            <label for="Prix" class="form-label">Prix</label>
                            {{ form_widget(form.Prix, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="mb-3">
                            <label for="Type" class="form-label">Type</label>
                            {{ form_widget(form.Type, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="mb-3">
                            <label for="quantite" class="form-label">quantite</label>
                            {{ form_widget(form.quantite, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="mb-3">
                            <label for="quantite_Vendues" class="form-label">quantite Vendues</label>
                            {{ form_widget(form.quantite_Vendues, {'attr': {'class': 'form-control'}}) }}
                        </div>
                      
                        <div class="mb-3">
                            <label for="imageFile" class="form-label">Image</label>
                            {{ form_widget(form.imageFile, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        
                       
                        <button type="submit" class="btn btn-primary">Ajouter</button>
                        {{ form_end(form) }}
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
</body>

