{% extends 'base-back.html.twig' %}
{% block body %}
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Login | Minible - Admin & Dashboard Template</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="Premium Multipurpose Admin & Dashboard Template" name="description" />
    <meta content="Themesdesign" name="author" />
    <!-- App favicon -->
    <link rel="shortcut icon" href="{{asset('back-office/images/favicon.ico')}}">
    <!-- Bootstrap Css -->
    <link href="{{asset('back-office/css/bootstrap.min.css')}}" id="bootstrap-style" rel="stylesheet" type="text/css" />
    <!-- Icons Css -->
    <link href="{{asset('back-office/css/icons.min.css')}}" rel="stylesheet" type="text/css" />
    <!-- App Css-->
    <link href="{{asset('back-office/css/app.min.css')}}" id="app-style" rel="stylesheet" type="text/css" />
    <style>
        /* Centrer le formulaire */
        .center-form {
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh; /* Assure que le formulaire est centré verticalement */
            background-color: #f8f9fa; /* Couleur de fond */
        }
        /* Conteneur du formulaire */
        .form-container {
            background-color: #f8f8f8; /* Couleur de fond */
            padding: 27px; /* Augmente le rembourrage */
            border-radius: 8px;
            box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.9); /* Ombre */
            width: 600px; /* Largeur du formulaire */
            max-width: 90%; /* Largeur maximale */
        }
        /* Titre du formulaire */
        .form-title {
            text-align: center;
            margin-bottom: 30px;
            font-size: 28px; /* Augmente la taille de police */
            color: #000000; /* Couleur de texte noire */
        }
        /* Bouton de soumission */
        .submit-btn {
            width: 100%;
            margin-top: 30px; /* Augmente la marge supérieure */
        }
        /* Ajustement de la taille de police et de la couleur des champs de formulaire */
        input[type="text"], input[type="email"], select {
            font-size: 16px; /* Augmente la taille de police */
            font-weight: bold; /* Texte en gras */
            color: #000000; /* Couleur de texte noire */
            background-color: transparent; /* Fond transparent */
            border: none; /* Supprime la bordure */
            border-bottom: 2px solid #000000; /* Ajoute une bordure inférieure noire */
            padding: 10px 0; /* Ajoute un rembourrage supérieur et inférieur */
            margin-bottom: 20px; /* Ajoute une marge inférieure */
            width: 100%; /* Largeur de 100% */
        }
        /* Style pour le focus sur les champs de formulaire */
        input[type="text"]:focus, input[type="email"]:focus, select:focus {
            outline: none; /* Supprime l'effet de soulignement */
            border-bottom-color: #ffc107; /* Couleur de la bordure inférieure au focus */
        }
    </style>
</head>
<body>
    <div class="center-form">
        <div class="form-container">
            <h1 class="form-title">Modifier une offre</h1>
            {{ form_start(form) }}
            {{ form_widget(form) }}
            <button type="submit" class="btn btn-primary submit-btn">Modifier</button>
            {{ form_end(form) }}
        </div>
    </div>
</body>
</html>
