    <div class="container">
<h1>Consulter les offres</h1>
<div class="table-container">
    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Spécialité</th>
                <th>Tarif / heure</th>
                <th>État de l'offre</th>
                <th>Coach</th>
                <th>Email</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            {% for offre in offres %}
                <tr>
                    <td>{{ offre.nom }}</td>
                    <td>{{ offre.specialite }}</td>
                    <td>{{ offre.tarif_heure }}</td>
                    <td>{{ offre.etat_offre }}</td>
                    <td>{{ offre.coach.email }}</td>
                    <td>{{ offre.email }}</td>
                    <td>
                        <a href="{{ path('modifier_offre', {'id': offre.id}) }}" class="action-btn edit-btn">
                            Modifier
                        </a>
                        <a href="{{ path('supprimer_offre', {'id': offre.id}) }}" class="action-btn delete-btn" onclick="return confirm('Êtes-vous sûr de vouloir supprimer cette offre ?')">
                            Supprimer
                        </a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
