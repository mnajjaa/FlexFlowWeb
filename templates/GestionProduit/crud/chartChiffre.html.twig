{% extends 'base.html.twig' %}

{% block title %}Chiffre d'affaires par jour{% endblock %}

{% block body %}
    <div>
        <canvas id="chiffreAffairesChart"></canvas>
    </div>
{% endblock %}

{% block javascripts %}
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        var chiffreAffairesParJour = {{ chiffreAffairesParJour|json_encode|raw }};
        var dates = Object.keys(chiffreAffairesParJour);
        var montants = Object.values(chiffreAffairesParJour);
        
        var ctx = document.getElementById('chiffreAffairesChart').getContext('2d');
        var myChart = new Chart(ctx, {
            type: 'line',
            data: {
                labels: dates,
                datasets: [{
                    label: 'Chiffre d\'affaires par jour',
                    data: montants,
                    fill: false,
                    borderColor: 'rgb(75, 192, 192)',
                    tension: 0.1
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                }
            }
        });
    </script>
{% endblock %}
